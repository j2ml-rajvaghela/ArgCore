@using ArgCore.Helpers
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    ViewBag.Title = "Template Categories";
}
@model ArgCore.Models.TemplateCats
@if (Model == null)
{
    return;
}
<div id="TemplateCatsList" class="main-content row">
    <div class="row text-right right options exportIcon">
        <img src="~/images/export.png" />
    </div>
    <div id="searchBlock" class="row">
        <div class="col-md-10 searchBlock">
            <input id="txtSearch" type="text" name="searchquery" class="form-control txtSearch" placeholder="Type here to search...">
            <a id="btnSearch" class="Search" href="javascript:void(0);"><span class="fa fa-search"></span></a>
        </div>
        <div class="col-md-2 text-right right addItem">
            <a href="@(Common.MyRoot)TemplateCats/Save?catId=0" title="Add Category">+ Add Category</a>
        </div>
    </div>
    @if (Model.TemplateCatsList != null && Model.TemplateCatsList.Any())
    {
        <table id="templateCats-list" class="table text-center">
            <thead>
                <tr>
                    <th class="name">Name</th>
                    <th class="addedOn">Added on</th>
                </tr>
            </thead>
            <tbody class="templateCat-details">
                @foreach (var tempCat in Model.TemplateCatsList)
                {
                    <tr>
                        <td>
                            <a href="@(Common.MyRoot)TemplateCats/Save?catId=@tempCat.CatId" title="Edit Template Category">@tempCat.Name</a>
                        </td>
                        <td>@tempCat.AddedOn.ToString("D")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        @Html.Raw("<h3>No category found!</h3>")
    }
</div>