@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@* @using Dashboard *@
<div id="MenusList" class="main-content row">
    <div class="row text-right right options exportIcon">
        <img src="~/images/export.png" />
    </div>
    @*<div class="right text-right">
    <img src="/images/menu-item-icon.png"> @Html.ActionLink("Manage Menu Items", "Index", "MenuItems", null, null)
    </div>*@
    <div id="searchBlock" class="row">
        <div class="col-md-10 searchBlock">
            <input id="txtSearch" type="text" name="searchquery" class="form-control txtSearch" placeholder="Type here to search...">
            <a id="btnSearch" class="Search" href="javascript:void(0);"><span class="fa fa-search"></span></a>
        </div>
        <div class="col-md-2 text-right right addItem">
            <a href="~/Menus/Save?menuId=0" title="Add Menu">+ Add Menu</a>
        </div>
    </div>
    @if (Model.MenusList != null && Model.MenusList.Count > 0)
    {
        <table id="menus-list" class="table text-center">
            <thead>
                <tr>
                    <th class="name">NAME</th>
                    <th class="dispName">DISPLAY NAME</th>
                    <th class="added">ADDED ON</th>
                </tr>
            </thead>
            <tbody class="menu-details">
                @foreach (var item in Model.MenusList)
                {
                    <tr>
                        <td class="name">
                            <a href="~/Menus/Save?menuId=@item.MenuId" title="Edit Menu">@item.Name</a>
                        </td>
                        <td class="dispName">@item.DisplayName</td>
                        <td class="added">@item.AddedOn.ToString("F")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        @Html.Raw("<h3>No items found!</h3>")
    }
</div>