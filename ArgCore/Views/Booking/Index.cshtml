                        <div class="col-md-5 dateBlock">
                            <div class="col-md-5">
                                @Html.TextBoxFor(x => x.SearchOptionsCeva.BookingMinMeasure, "{0:#.#}", new { @class = "form-control", placeholder = "Min." })
                            </div>
                            <label class="col-md-2">and</label>
