                            @Html.TextBoxFor(x => x.SearchOptionsCeva.GoodsDescription, null, new { @class = "form-control" })
                        </div>
                        <div class="col-md-1">
                            @Html.DropDownListFor(x => x.SearchOptionsCeva.GoodsDescOperator, Model.Operators, new { id = "ddlOperators", @class = "form-control" })
