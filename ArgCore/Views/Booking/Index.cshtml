                                    <input class="hidden neverclear" name="SearchOptionsCeva.SortOptions[@idx].ColumnName" type="text" value="@Model.SearchOptionsCeva.SortOptions[@idx].ColumnName">
                                    <i class="fa fa-arrows"></i>
                                </div>
                                idx++;
                            }
