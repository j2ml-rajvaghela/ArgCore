                                @Html.TextBoxFor(x => x.SearchOptionsCeva.BookingMaxMeasure, "{0:#.#}", new { @class = "form-control", placeholder = "Max." })
                            </div>
                        </div>
                    </div>
                    <div class="form-group excludefrombilltype">
