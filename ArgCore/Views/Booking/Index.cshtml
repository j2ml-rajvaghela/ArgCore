                    <div class="form-group">
                        <label for="inputUrl" class="mylabel control-label col-md-4">HAWB / HBOL / House / Ref #</label>
                        <div class="col-md-5">
                            @Html.TextBoxFor(x => x.SearchOptionsCeva.Bol, null, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
