@model System.Exception
@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_AdminLayout_v1.cshtml";
}

<div id="error">
    <h1 class="text-center">Error!</h1>
    <h3 class="text-danger text-center">An error occurred while processing your request.</h3>
    <div style="margin-left: 30px; letter-spacing:.5px;">

        @if (Model != null)
        {
            <p><b>Error Type:</b>@Model.GetType().Name</p>
            <p><b>Error Message:</b><br />@Model.Message</p>
        }

    </div>
</div>
