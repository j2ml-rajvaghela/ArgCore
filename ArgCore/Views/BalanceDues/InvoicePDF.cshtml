    {
        h1HeadPending = "Pending ";
    }
    <page>
        <div class="invoicePDF page0 pagebreak">
            <table style="width:100%">
                <tr>
                    <td style="text-align:center">
                        <h1>STATEMENT: SUPPLEMENTAL CHARGES(SUMMARY)</h1>
                        @*<h1>@(h1HeadPending)Supplemental Invoice (Summary)</h1>*@
                    </td>
                </tr>
                <tr>
