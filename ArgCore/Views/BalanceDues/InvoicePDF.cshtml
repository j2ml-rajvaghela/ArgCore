                                                {
                                                <div class="phone">
                                                @if (!string.IsNullOrWhiteSpace(Model.ClientDetails.Contact))
                                                {
                                                <span class="myLabel">PH: </span><span class="value">@Model.ClientDetails.Contact</span>
                                                }
                                                @if (!string.IsNullOrWhiteSpace(Model.ClientDetails.Fax))
