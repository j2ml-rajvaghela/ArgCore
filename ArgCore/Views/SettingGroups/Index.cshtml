@model ArgCore.Models.SettingGroups
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    ViewBag.Title = "Setting Groups";
}

@if (Model == null)
{
    return;
}
<div id="SettingGroupsList" class="main-content row">
    <div class="row text-right right options exportIcon">
        <img src="/images/export.png" />
    </div>
    <div id="searchBlock" class="row">
        <div class="col-md-10 searchBlock">
            <input id="txtSearch" type="text" name="searchquery" class="form-control txtSearch" placeholder="Type here to search...">
            <a id="btnSearch" class="Search" href="javascript:void(0);"><span class="fa fa-search"></span></a>
        </div>
        <div class="col-md-2 text-right right addItem">
            <a href="~/SettingGroups/Save?groupId=0" title="Add Group">+ Add Group</a>
        </div>
    </div>
    @if (Model.SettingGroupsList != null && Model.SettingGroupsList.Any())
    {
        <table id="settings-list" class="table text-center">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody class="setting-details">
                @foreach (var group in Model.SettingGroupsList)
                {
                    <tr>
                        <td>@group.GroupId</td>
                        <td>
                            <a href="~/SettingGroups/Save?groupId=@group.GroupId" title="Edit Group">@group.Name</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        @Html.Raw("<h3>No groups found!</h3>")
    }
</div>