@model ArgCore.Models.ClientSMTPAccounts
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div id="AddClientSMTPAccount" class="main-content row">
    @using (Html.BeginForm("Save", "ClientSMTPAccounts", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <h2>@Model.CommonObjects.Heading</h2>
        @Html.HiddenFor(x => x.ClientSMTPAccountDetail.SMTPAccountId)
        <div class="form-group">
            <label for="inputUrl" class="mylabel control-label col-md-3">Client</label>
            <div class="col-md-5">
                @Html.DropDownListFor(x => x.ClientSMTPAccountDetail.CompanyId, Model.Companies, "-- select client --", new { id = "ddlCompanies", @class = "form-control" })
                @Html.ValidationMessageFor(x => x.ClientSMTPAccountDetail.CompanyId)
            </div>
        </div>
        <div class="form-group">
            <label for="inputUrl" class="mylabel control-label col-md-3">Credential UserName</label>
            <div class="col-md-5">
                @Html.TextBoxFor(x => x.ClientSMTPAccountDetail.UserName, null, new { @class = "form-control", maxlength = "100" })
                @Html.ValidationMessageFor(x => x.ClientSMTPAccountDetail.UserName)
            </div>
        </div>
        <div class="form-group">
            <label for="inputUrl" class="mylabel control-label col-md-3">Password</label>
            <div class="col-md-5">
                @Html.TextBoxFor(x => x.ClientSMTPAccountDetail.Password, null, new { @class = "form-control", maxlength = "100", type = "Password" })
                @Html.ValidationMessageFor(x => x.ClientSMTPAccountDetail.Password)
            </div>
        </div>
        <div class="form-group">
            <label for="inputUrl" class="mylabel control-label col-md-3">From Email</label>
            <div class="col-md-5">
                @Html.TextBoxFor(x => x.ClientSMTPAccountDetail.FromEmail, null, new { @class = "form-control", maxlength = "100" })
                @Html.ValidationMessageFor(x => x.ClientSMTPAccountDetail.FromEmail)
            </div>
        </div>
        <div class="form-group">
            <label for="inputUrl" class="mylabel control-label col-md-3">From Name</label>
            <div class="col-md-5">
                @Html.TextBoxFor(x => x.ClientSMTPAccountDetail.FromName, null, new { @class = "form-control", maxlength = "100" })
                @Html.ValidationMessageFor(x => x.ClientSMTPAccountDetail.FromName)
            </div>
        </div>
        <div class="form-group">
            <label for="inputUrl" class="mylabel control-label col-md-3">SMTP Client</label>
            <div class="col-md-5">
                @Html.TextBoxFor(x => x.ClientSMTPAccountDetail.SMTPClient, null, new { @class = "form-control", maxlength = "100" })
                @Html.ValidationMessageFor(x => x.ClientSMTPAccountDetail.SMTPClient)
            </div>
        </div>
        <div class="form-group">
            <label for="inputUrl" class="mylabel control-label col-md-3">Port</label>
            <div class="col-md-5">
                @Html.TextBoxFor(x => x.ClientSMTPAccountDetail.Port, null, new { @class = "form-control", maxlength = "100" })
                @Html.ValidationMessageFor(x => x.ClientSMTPAccountDetail.Port)
            </div>
        </div>
        <div class="btnClientInfo">
            <div class="col-xs-12 col-md-4">
                @Html.ActionLink("Delete", "Delete", "ClientSMTPAccounts", new { SMTPAccountId = @Model.ClientSMTPAccountDetail.SMTPAccountId }, new { @class = "btn btn-lg btnDelete" })
            </div>
            <div class="col-xs-12 col-md-8 right text-right">
                <button type="submit" class="btn btn-lg btnSave"><i class="fa fa-floppy-o"></i> Save</button>
                <button type="button" class="btn btn-lg btnCancel"><i class="fa fa-ban"></i> Cancel</button>
            </div>
        </div>
    }
</div>