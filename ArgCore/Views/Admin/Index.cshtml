                            <div class="firstLastName">@Html.Raw(stat.FirstName + " " + stat.LastName)</div>
                            <div class="email">@stat.UserName</div>
                        </div>
                        <div class="userRole col-md-2">@stat.RoleName</div>
                        <div class="client col-md-1">@Html.Raw(!string.IsNullOrWhiteSpace(stat.ClientName) ? stat.ClientName : "-")</div>
