                        <div class="note col-md-1" data-toggle="tooltip" title="@Html.Raw(stat.Note)">@Html.Raw(stat.Note)</div>
                        <div class="addedOn col-md-2">@stat.AddedOn.ToString("f")</div>
                        <div class="ipAddr col-md-1">@stat.IpAddress</div>
                    </div>
                }
