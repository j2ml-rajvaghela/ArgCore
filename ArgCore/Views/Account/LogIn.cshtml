@using ArgCore.Helpers
@model LoginViewModel
@{
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ARG ATLAS</title>
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link href="/favicon.ico" />

    <link href="~/content/materialdesignicons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Montserrat">
    <script src="~/bundles/modernizr"></script>
    <script src="~/bundles/jquery"></script>
    <script src="~/Scripts/jquery-ui-1.12.0.min.js"></script>
    <script src="~/Scripts/knockout-3.2.0.js"></script>
    <script src="~/Scripts/knockout.mapping-latest.js"></script>
    <script src="~/Scripts/site.js"></script>
    <style>
        body {
            /*background-color: #293D4E;*/
            background: url("res/graphics/LoginBg.jpg");
            font-family: 'Montserrat', Helvetica, Arial, Lucida, sans-serif !important;
        }

        #main-container {
            /*background-image: url(/res/graphics/bg.jpg);*/
            padding: 100px 50px;
            position: fixed;
            top: 0;
            bottom: 0;
            right: 0;
            left: 0;
            background-size: cover;
        }

        .validation-summary-errors ul li {
            list-style-type: none;
            color: #da694e;
            padding: 14px 0px 8px 0;
            font-weight: 600;
        }

        #login .logo {
            margin-top: 200px;
            padding-left: 200px;
        }

        #login .loginForm {
            margin-top: 90px;
        }

        #login h1 {
            color: #fff !important;
        }

        #login .form-control {
            height: 60px;
            font-size: 18px;
            margin: 0 auto;
            margin-top: 35px;
            width: 70%;
            color: #fff;
            background-color: transparent !important;
            border-color: #fff !important;
        }

        #login input {
            max-width: 55% !important;
        }

        #login .forgotPwd {
            margin-top: 15px;
        }

            #login .forgotPwd a {
                font-size: 18px;
            }

        #login a, #login a:hover {
            color: #c9d3dc;
        }

        #login .btnLogin {
            color: #fff;
            background-color: #2a93bd;
            height: 60px;
            margin-top: 20px;
            width: 70%;
            font-weight: 700;
        }

        .validation-summary-errors.alert-danger {
            border: 2px solid #da694e;
            background-color: #fde8e4 !important;
            width: 55%;
            margin: 0 auto;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div id="main-container">
        <h1 style="text-align:center;color:#f00"> You are accessing the dev site.</h1>
        <div id="login" class="row">
            <div class="col-md-6 logo">
                <img src="~/images/ARG-logo-.png">
            </div>
            <div class="col-md-6 loginForm text-center">
                <section id="loginForm">
                    <h1>Account Login</h1>
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, false, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "alert-danger" })
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        <input type="submit" value="LOGIN" class="login-button btn btn-lg btnLogin" />
                        <div class="forgotPwd">@Html.ActionLink("Forgot Password?", "ForgotPassword")</div>
                    }
                </section>
            </div>
        </div>
    </div>
    <script src="~/bundles/bootstrap"></script>
    <link href="~/content/blackbird.css" rel="stylesheet" />
    <link href="~/css/Style.css" rel="stylesheet" />
    <script src="~/js/Scripts/blackbird.js"></script>
</body>
</html>
