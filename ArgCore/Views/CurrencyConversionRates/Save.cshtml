@model ArgCore.Models.CurrencyConversionRates
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    ViewBag.Title = "Save Currency Conversion Rates";
}

<div id="AddCurrencyConversionRates" class="main-content row">
    @using (Html.BeginForm("Save", "CurrencyConversionRates", FormMethod.Post, new { id = "frmSaveCurrencyConversionRates", @class = "form-horizontal" }))
    {
        <h2>@Model.CommonObjects.Heading</h2>
        @Html.HiddenFor(x => x.CurrencyConversionRatesDetail.CurrencyId)
        <div class="form-group">
            <label for="inputUrl" class="mylabel control-label col-md-3">Base Currency</label>
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.CurrencyConversionRatesDetail.BaseCurrency, null, new { @class = "form-control firstSpacetruncate" })
                @Html.ValidationMessageFor(x => x.CurrencyConversionRatesDetail.BaseCurrency)
            </div>
        </div>
        @*if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
    <div class="row errormessage">

    @Html.Raw(Model.ErrorMessage)
    </div>
    }*@
        <div class="form-group">
            <label for="inputUrl" class="mylabel control-label col-md-3">Currency Converted To</label>
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.CurrencyConversionRatesDetail.CurrencyConvertedTo, null, new { @class = "form-control firstSpacetruncate" })
                @Html.ValidationMessageFor(x => x.CurrencyConversionRatesDetail.CurrencyConvertedTo)
            </div>
        </div>
        <div class="form-group">
            <label for="inputUrl" class="mylabel control-label col-md-3">Conversion Rate</label>
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.CurrencyConversionRatesDetail.ConversionRate, null, new { @class = "form-control firstSpacetruncate" })
                @Html.ValidationMessageFor(x => x.CurrencyConversionRatesDetail.ConversionRate)
            </div>
        </div>
        <div class="form-group">
            <label for="inputUrl" class="mylabel control-label col-md-3">Conversion Date</label>
            <div class="col-md-3">
                @Html.TextBoxFor(m => m.CurrencyConversionRatesDetail.ConversionDate, null, new { @class = "form-control datepicker" })
                @Html.ValidationMessageFor(x => x.CurrencyConversionRatesDetail.ConversionDate)
            </div>
        </div>
        <div class="btnReasrItemInfo">
            <div class="col-xs-12 col-md-12">
                <div class="col-xs-12 col-md-4">
                    <button type="submit" class="btn btn-lg btnSave"><i class="fa fa-floppy-o"></i> Save</button>
                </div>
                <div class="col-xs-12 col-md-8 right text-right">
                    <button type="button" class="btn btn-lg btnCancel"><i class="fa fa-ban"></i> Cancel</button>
                </div>
            </div>
        </div>
    }
</div>